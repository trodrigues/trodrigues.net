.main-title
  margin-bottom: 3rem
  a, a:hover
    color: black
    text-decoration: none

.main-nav
  position: absolute
  right: 0.7rem
  top: 0.4rem
  font-size: 1.3rem
  @media mobile-landscape
    right: auto
    left: 2%
    top: 3.4rem
    font-size: 1rem
  li
    display: inline
  span
    margin: 0px 4px
  a
    color: rgb(50,50,50)
    background: rgb(207,207,207)
  a:hover
    background: none
    text-decoration: none

.article-list
  font-size: 1.3rem
  margin-left: 1.5rem
  li
    list-style-type: disc
    margin-bottom: 0.5rem
  a
    margin-right: 0.5rem
  time
    margin-left: 0.5rem

article
  time
    display: block
    margin-bottom: 1.5rem
    font-style: italic
    color: rgb(120, 120, 120)
.article-text, hr
  margin-bottom: 4rem
  h3
    margin-top: 2.5rem
    margin-bottom: 1rem

.comments-cover
  font-style: italic
  p
    font-size: 1rem
  button
    margin-top: 20px
    background: none
    border: 2px solid black
    border-radius: 5px
    font-size: 1.3rem
  button:hover
    background-color: #ddd

