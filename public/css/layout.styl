.main-title
  margin-bottom: 1rem
  a, a:hover
    color: black
    text-decoration: none

.main-nav
  position: absolute
  right: 0.7rem
  top: 0.4rem
  font-size: 1.3rem
  li
    display: inline
  span
    margin: 0px 4px
  a
    color: rgb(50,50,50)
    background: rgb(207,207,207)
  a:hover
    background: none
    text-decoration: none

main
  width: 50rem

  h2
    margin-bottom: 0.5rem

  p, dl
    line-height: 1.5rem
    margin-bottom: 0.8rem
    font-size: 1.2rem

  a
    color: rgb(100, 100, 100)
  a:hover
    text-decoration: none

  dl
    display: block
    overflow: hidden
  dt, dd
    float: left
  dt
    clear: left
    margin-right: 0.2rem

.article-list
  font-size: 1.3rem
  margin-left: 1.5rem
  li
    list-style-type: disc
    margin-bottom: 0.5rem
  a
    margin-right: 0.5rem
  time
    margin-left: 0.5rem

article
  time
    display: block
    margin-bottom: 1.5rem
    font-style: italic
    color: rgb(120, 120, 120)
  .article-text, hr
    margin-bottom: 60px

.comments-cover
  font-style: italic
  p
    font-size: 1rem
  button
    margin-top: 20px
    background: none
    border: 2px solid black
    border-radius: 5px
    font-size: 1.3rem
  button:hover
    background-color: #ddd

